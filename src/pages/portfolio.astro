---
import RetroLayout from '../layouts/RetroLayout.astro';

const projects = [
	{
		title: 'Retro Blog',
		description:
			"A nostalgic blog platform built with Astro and styled like it's 1999.",
		tech: ['Astro', 'TypeScript', 'CSS'],
		image: '',
		link: 'https://github.com/yourusername/retro-blog',
	},
	{
		title: 'Nutrition Api',
		description: 'Nutrition REST Api',
		tech: ['Html', 'Typescript', 'Express', 'MongoDB'],
		image: '',
		link: 'https://github.com/MarekKabala1/NutritionApi',
	},
	{
		title: 'Invoice/Budget Tacker',
		description: 'Send yours business invoices and track expenses',
		tech: ['ReactNative', 'Expo', 'SQlite', 'Drizzle ORM', 'React Hook Form'],
		image: '',
		link: 'https://github.com/MarekKabala1/invoiceApp',
	},
	{
		title: 'Pokemon',
		description:
			'An App that connect to the Pokemon Api to check pokemon stats ,and to compare two pokemon ',
		tech: ['React Native', 'Expo', 'Tailwind', 'Zustand', 'Tanstack-query'],
		image: '',
		link: 'https://github.com/MarekKabala1/pokiapp',
	},

	{
		title: 'Invoice/Budget Tacker',
		description: 'Send yours business invoices and track expenses',
		tech: ['ReactNative', 'Expo', 'SQlite', 'Drizzle ORM', 'React Hook Form'],
		image: '',
		link: 'https://github.com/MarekKabala1/invoiceApp',
	},
];
---

<RetroLayout title='My Portfolio'>
	<div class='portfolio-grid'>
		{
			projects.map((project) => (
				<div class='retro-window project-card'>
					<div class='retro-window-title'>{project.title}</div>
					<div class='project-content'>
						<div class='project-image'>
							{!project.image ? (
								<div>{project.title}</div>
							) : (
								<img
									src={project.image}
									alt={project.title}
									width='200'
									height='150'
								/>
							)}
						</div>
						<p class='project-description'>{project.description}</p>
						<div class='tech-stack'>
							<div class='retro-window-title'>Tech Stack</div>
							<div class='tech-list'>
								{project.tech.map((tech) => (
									<span class='tech-badge'>{tech}</span>
								))}
							</div>
						</div>
						<div class='project-link'>
							<a
								href={project.link}
								class='retro-button'
								target='_blank'
								rel='noopener noreferrer'>
								üíª View Project
							</a>
						</div>
					</div>
				</div>
			))
		}
	</div>

	<div class='retro-window skills-section'>
		<div class='retro-window-title'>My Skills</div>
		<div class='skills-content'>
			<div class='skill-category'>
				<h3>üåê Frontend</h3>
				<div class='skill-list'>
					<span class='skill-badge'>HTML</span>
					<span class='skill-badge'>CSS</span>
					<span class='skill-badge'>JavaScript</span>
					<span class='skill-badge'>React</span>
					<span class='skill-badge'>React Native</span>
					<span class='skill-badge'>TypeScript</span>
				</div>
			</div>

			<div class='skill-category'>
				<h3>‚öôÔ∏è Backend</h3>
				<div class='skill-list'>
					<span class='skill-badge'>Node.js</span>
					<span class='skill-badge'>SQL</span>
					<span class='skill-badge'>MongoDB</span>
				</div>
			</div>

			<div class='skill-category'>
				<h3>üõ†Ô∏è Tools</h3>
				<div class='skill-list'>
					<span class='skill-badge'>Git</span>
					<span class='skill-badge'>VS Code</span>
					<span class='skill-badge'>Figma</span>
				</div>
			</div>
		</div>
	</div>
</RetroLayout>

<style>
	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
		margin-bottom: 20px;
	}

	.project-card {
		height: 100%;
		transition: transform 0.2s;
	}

	.project-card:hover {
		transform: translateY(-2px);
	}

	.project-content {
		padding: 15px;
	}

	.project-image {
		text-align: center;
		margin-bottom: 15px;
	}

	.project-image img {
		max-width: 100%;
		height: auto;
		border: 2px solid var(--theme-border);
	}

	.project-description {
		margin-bottom: 15px;
		line-height: 1.5;
	}

	.tech-stack {
		margin: 15px 0;
	}

	.tech-list {
		padding: 10px;
		display: flex;
		flex-wrap: wrap;
		gap: 5px;
	}

	.tech-badge {
		background: var(--theme-secondary);
		color: white;
		padding: 2px 8px;
		border-radius: 3px;
		font-size: 0.9em;
	}

	.project-link {
		text-align: right;
	}

	.skills-section {
		margin-top: 30px;
	}

	.skills-content {
		padding: 20px;
	}

	.skill-category {
		margin-bottom: 20px;
	}

	.skill-category h3 {
		margin-bottom: 10px;
		color: var(--theme-secondary);
	}

	.skill-list {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}

	.skill-badge {
		background: var(--theme-primary);
		border: 2px solid var(--theme-border);
		padding: 5px 10px;
		font-size: 0.9em;
	}

	@media (max-width: 768px) {
		.portfolio-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
