---
import { Image } from 'astro:assets';
import RetroLayout from '../../layouts/RetroLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

type BlogPost = CollectionEntry<'blog'>;

const allPosts = await getCollection('blog');

const sortedPosts = (allPosts as BlogPost[]).sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<RetroLayout title='My Blog Posts'>
	<div class='blog-list'>
		{
			sortedPosts.length === 0 ? (
				<div class='retro-window'>
					<div class='retro-window-title'>No Posts Found</div>
					<div class='post-content'>
						<p>There are currently no blog posts available.</p>
					</div>
				</div>
			) : (
				sortedPosts.map((post) => (
					<div class='retro-window post-item'>
						<div class='retro-window-title post-title'>{post.data.title}</div>
						<div class='post-content'>
							<div class='post-date'>
								<small>ðŸ“… {new Date(post.data.pubDate).toLocaleDateString()}</small>
							</div>
							<div>
								{post.data.banner ? (
									<div class='post-image-wrapper'>
										<Image
											src={post.data.banner}
											class='post-image'
											loading={sortedPosts.indexOf(post) === 0 ? 'eager' : 'lazy'}
											alt={post.data.alt || 'Blog post image'}
											width={400}
											height={225}
											style={{ aspectRatio: 'auto' }}
											decoding={sortedPosts.indexOf(post) === 0 ? 'sync' : 'async'}
										/>
									</div>
								) : null}
							</div>
							<p class='post-excerpt'>{post.data.excerpt || 'Click to read more...'}</p>
							<div class='post-link'>
								<a href={`/blog/${post.slug}`} class='retro-button'>
									ðŸ“– Read Post
								</a>
							</div>
						</div>
					</div>
				))
			)
		}
	</div>
</RetroLayout>

<style>
	.blog-list {
		width: 100%;
		margin-bottom: 20px;

		p {
			text-align: center;
		}
	}

	.blog-list:has(.post-item) {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 20px;
	}

	.post-item {
		transition: transform 0.2s;
	}

	.post-item:hover {
		transform: translateY(-2px);
	}

	.post-title {
		display: flex;
		min-height: 3.5rem;
		align-items: center;
	}

	.post-content {
		padding: 15px;
		display: grid;
		align-items: center;
		grid-template-columns: 1fr;
		grid-template-rows: 30px 3fr 2fr 1fr;
		gap: 0.5rem;
	}

	.post-date {
		color: var(--theme-secondary);
	}
	.post-image {
		width: 100%;
		display: flex;
		justify-content: center;
	}

	.post-excerpt {
		line-height: 1.5;
		text-align: center;
	}

	.post-link {
		text-align: right;
	}
	@media (max-width: 768px) {
		.blog-list:has(.post-item) {
			display: grid;
			grid-template-columns: 1fr;
		}
		.post-title {
			display: flex;
			align-items: center;
		}
		.post-content {
			padding: 15px;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 1rem;

			.post-date,
			.post-excerpt {
				width: 100%;
				text-align: left;
			}

			.post-link {
				width: 100%;
				text-align: right;
			}
		}
		.post-image {
			width: 100%;
			height: auto;
		}
	}
</style>
